<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
     android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/corider" 
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
         android:layout_marginBottom="8dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/coriderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="60dp"
            android:layout_marginLeft="@dimen/margin_left"
            android:ellipsize="end"
              android:layout_marginTop="5dp" 
            android:singleLine="true"
            android:textColor="@color/body_text_primary"
            android:textSize="@dimen/km_text_size" />

        <View
            android:id="@+id/separator"
            android:layout_width="@dimen/seperator_width"
            android:layout_height="@dimen/seperator_height"
            android:layout_marginTop="5dp" 
            android:layout_marginLeft="@dimen/seperator_margin"
            android:layout_marginRight="@dimen/seperator_margin"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
              android:layout_marginTop="5dp" 
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/body_text_primary"
            android:textSize="@dimen/km_text_size" />
    </LinearLayout>
    <TextView
            android:id="@+id/destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/corider"
            android:ellipsize="end"
            android:maxWidth="220dp"
            android:singleLine="true"
             android:layout_marginLeft="@dimen/margin_left"
            android:textColor="@color/green_text"
            android:textSize="@dimen/km_text_size" />
    <ImageView
        android:id="@+id/img_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/image_margin_top"
        android:alpha="1"
        android:background="@null"
        android:src="@drawable/ic_action_chat"
         android:layout_marginLeft="30dp"
        android:layout_marginRight="12dp"
        android:layout_centerVertical="true"/>
</RelativeLayout>