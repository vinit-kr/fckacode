<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="70dp"
    
     android:background="@color/white">

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/corider" 
        android:layout_marginTop="3dp"
        
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/coriderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/body_text_primary"
            android:textSize="@dimen/destination_text_size" />

        <View
            android:id="@+id/separator"
            android:layout_width="@dimen/seperator_width"
            android:layout_height="@dimen/seperator_height"
            android:layout_marginTop="6dp" 
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:gravity="center_vertical"
            android:ellipsize="end"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:singleLine="true"
            android:textColor="@color/body_text_primary"
            android:textSize="@dimen/km_text_size" />
    </LinearLayout>
    <TextView
            android:id="@+id/destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/corider"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="3dp"
            android:textColor="@color/green_text"
            android:layout_marginLeft="@dimen/margin_left"
            android:textSize="@dimen/km_text_size" />
    
</RelativeLayout>